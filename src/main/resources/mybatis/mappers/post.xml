<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.post">
	<resultMap id="postResult" type="postVO">
		<result property="id" column="id" />
		<result property="userId" column="user_id" />
		<result property="title" column="title" />
		<result property="content" column="content" />
		<result property="createdAt" column="created_at" />
	</resultMap>

	<!-- id로 글 조회 -->
	<select id="selectOnePostById" resultMap="postResult"
		parameterType="Long">
    <![CDATA[
      SELECT * FROM post
      WHERE id=#{id}
    ]]>
	</select>

	<!-- DB에 제목과 내용 저장 -->
	<!-- useGeneratedKeys를 true로 지정하면, 방금 DB에 입력된 행의, keyProperty에 지정한 (여기선 
		id) 값을 postVO에 담아줌 -->
	<insert id="insertOnePost" parameterType="postVO"
		useGeneratedKeys="true" keyProperty="id">
    <![CDATA[
      INSERT INTO post(user_id, title, content)
      VALUES(#{userId}, #{title}, #{content})
    ]]>
	</insert>

	<!-- 전체 글 목록을 내림차순 조회 (id 번호 역순으로) -->
	<!-- 가장 최근 글부터 보이도록 구현 -->
	<select id="selectAllPostsByIdDesc" resultMap="postResult">
    <![CDATA[
      SELECT * FROM post
      ORDER BY id DESC
    ]]>
	</select>

</mapper>
	
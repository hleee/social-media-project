<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.userMapper">
	<resultMap id="userResult" type="userVO">
		<result property="id" column="id" />
		<result property="username" column="username" />
		<result property="password" column="password" />
		<result property="createdAt" column="created_at" />
	</resultMap>

	<!-- 단일 회원 조회 -->
	<select id="selectUser" resultMap="userResult"
		parameterType="Long">
    <![CDATA[
      SELECT * FROM user
      WHERE id=#{id}
    ]]>
	</select>

	<!-- 전체 회원 조회 -->
	<select id="selectAll" resultMap="userResult">
    <![CDATA[
      SELECT * FROM user
    ]]>
	</select>

	<!-- 회원 가입 -->
	<!-- parameterType은 매개변수 자료형, 우리는 modelConfig에서 alias 지정을 했으니 userVO로 축약 가능 -->
	<insert id="insertUser" parameterType="userVO">
    <![CDATA[
      INSERT INTO user(username, password)
      VALUES(#{username}, #{password})
    ]]>
	</insert>

	<!-- 로그인 -->
    <select id="login" resultMap="userResult"
		parameterType="userVO">
    <![CDATA[
      SELECT * FROM user
      WHERE username=#{username} AND password=#{password}
    ]]>
	</select>
	
	<!-- 토큰 테이블에 토큰 저장 -->
	<insert id="insertToken" parameterType="tokenVO">
    <![CDATA[
      INSERT INTO token(token, user_id)
      VALUES(#{token}, #{userId})
    ]]>
	</insert>

</mapper>

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="mapper.board">
<resultMap id="userResult" type="userVO">
    <result property="id" column="id" />
    <result property="username" column="username" />
    <result property="password" column="password" />
    <result property="createdAt" column="created_at" />
  </resultMap> 

  <!-- 단일 회원 조회 -->
  <select id="selectUser" resultMap="userResult" parameterType="Long">
    <![CDATA[
      SELECT * FROM user
      WHERE id=#{id}
    ]]>
  </select>
  
  <!-- 전체 회원 조회 -->
  <select id="selectAllUsers" resultMap="userResult">
    <![CDATA[
      SELECT * FROM user
    ]]>
  </select>
  
  <select id="loginByUsername" resultMap="userResult" parameterType="userVO">
    <![CDATA[
      SELECT * FROM user
      WHERE username=#{username} AND password=#{password}
    ]]>
  </select>
  
  <select id="insertUser" parameterType="userVO">
    <![CDATA[
      INSERT INTO user(id, username, password)
      VALUES(#{id}, #{username}, #{password})
    ]]>
  </select>

</mapper>
